
@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    @*<span class="label label-success float-right">Monthly</span>*@
                    <h5>Blog </h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.writerBlogCount</h1>
                    <small>Sana Ait Blog Sayısı</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    <span class="label label-info float-right">Sana Ait Yorumlar</span>
                    <h5>Yorum</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.writerCommentCount </h1>
                    <small>Yapılan Toplam Yorum Sayısı</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    <span class="label label-primary float-right">Yazarlar</span>
                    <h5>Yazar</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.totalWriter</h1>
                    <small>Toplam Yazar Sayısı</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    <span class="label label-danger float-right">Bloglar</span>
                    <h5>Site Blog</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.totalBlog</h1>
                    <small>Toplam Blog Sayısı</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            @await Component.InvokeAsync("GetPopularBlogs")

         
        <div class="col-lg-8">

            <div class="row">
                @await Component.InvokeAsync("GetLastBlogs")

                @await Component.InvokeAsync("GetPopularWriters")
                @await Component.InvokeAsync("GetLastCommentsByWriter", new { id = Model.WriterID })

            </div>
            <div class="row">
            </div>

        </div>


    </div>
</div>


