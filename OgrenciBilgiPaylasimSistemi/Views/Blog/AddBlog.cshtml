@model OgrenciBilgiPaylasimSistemi.Models.NewBlog
@{
    ViewData["Title"] = "AddBlog";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Summernote with Bootstrap 4</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>


    <link href="~/inspinia-gh-pages/css/plugins/dropzone/basic.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/dropzone/dropzone.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <title>INSPINIA | Text Editor</title>

    <link href="~/inspinia-gh-pages/css/plugins/summernote/summernote-bs4.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">
    <link href="~/lib/jquery-validation/dist/jquery.validate.min.js" />



</head>

<body>

    <div class="wrapper wrapper-content">
        <form class="form-group" action="/Blog/AddBlog" method="post" enctype="multipart/form-data">

            <div class="forms-sample">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">

                            @Html.Label("Kategori")
                            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control " })
                        </div>
                        <div class="form-group">
                            @Html.Label("Blog Kapak Görselini Seçiniz")

                            <input type="file" name="BlogThumbnailImage" id="getimage" class="form-control" />
                        </div>
                    </div>
                </div>@*src="~/BlogThumbnails/@(Model.BlogThumbnailImage?? "152f2d38-0496-4eee-873e-804703794906.jpg")"*@

                <br />
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">

                            @Html.Label("Blog Başlığı")
                            @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
                        </div>

                    </div>
                </div>

                <br /> <br /><br />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox ">
                            <div class="form-group">
                                <div class="ibox-title">
                                    <h5>Yeni Blog Girişi</h5>
                                    <div class="ibox-tools">

                                    </div>
                                </div>
                                <div class="ibox-content no-padding">

                                    @Html.TextAreaFor(x => x.BlogContent, new { @id = "summernote" })

                                    <div class="float-right"><button class="btn demo3  btn-outline submit btn-success dim" id="shareBtn" type="submit">Paylaş</button></div>

                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </form>
       
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/inspinia-gh-pages/js/inspinia.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/pace/pace.min.js"></script>

    <!-- SUMMERNOTE -->
    <script src="~/inspinia-gh-pages/js/plugins/summernote/summernote-bs4.js"></script>

    <script>
 

        $('#summernote').summernote({
            height: 800
        });

        var textareaValue = $('#summernote').summernote('code');


        $('.demo3').click(function () {
            swal({
                title: "Emin Misin?",
                text: "Yazdığın notlar paylaşılacaktır!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Evet, paylaş!",
                closeOnConfirm: false,
                timer: 2000
            }, function () {
                swal("Yayımlandı!", "Notlarını arkadaşlarınla paylaştığın için teşekkürler.", "success");
            });
        });
     

    </script>

    <script href="~lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!-- Jasny -->
    <script src="~/inspinia-gh-pages/js/plugins/jasny/jasny-bootstrap.min.js"></script>

    <!-- DROPZONE -->
    <script src="~/inspinia-gh-pages/js/plugins/dropzone/dropzone.js"></script>

    <!-- CodeMirror -->
    <script src="~/inspinia-gh-pages/js/plugins/codemirror/codemirror.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/codemirror/mode/xml/xml.js"></script>


</body>

</html>
