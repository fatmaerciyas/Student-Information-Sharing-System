@model IEnumerable<EntityLayer.Concrete.Comment>
@{ bool comment = false;}
@foreach (var item in Model)
{

    <div class="social-feed-box" style="border: 1px solid #D8D2D1; border-radius: 5px; box-shadow: 0px 0.5px 10px 0.5px #D8D2D1; ">
        <div class="social-avatar">
            <a href="/Writer/WriterProfile/@item.WriterID" class="float-left">
                <img alt="image" src="@item.Writer.WriterImage">
            </a>
            <div class="media-body">
               <b>@item.Writer.WriterName</b>
                <small class="text-muted">@(((DateTime)item.CommentCreateDate).ToString("dd-MMM-yyyy"))</small>
            </div>
        </div>
 
        <div class="social-body">

            <p>
            <p style="font-weight:700">@item.CommentTitle</p>
            @item.CommentContent
            </p>
            @if (ViewBag.writerID == item.WriterID)
            {<div class="float-right"><a href="/Comment/DeleteComment/@item.CommentID" style="font-size:20px; color:dimgrey;"><i class="fa fa-trash-o ">Sil</i></a></div>}
        </div>
      
    </div>
    comment = true;
    <br />
    <br />
}

@if (comment == false)
{
    <br />
    <br />
    <p>
        Paylaşıma henüz yorum yapılmamış. İlk Yorumu sen yap!
    </p>
    <br />
    <br />
}